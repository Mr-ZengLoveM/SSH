<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	<import resource="applicationContext.xml"/>
	<bean id="typeservice" 
		  class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="target">
			<bean class="service.TypesService">
				<property name="edi" ref="entityDao" />
			</bean>
		</property>
		<property name="transactionManager" ref="transactionManager" />
		<property name="transactionAttributes">
			<props>
				<prop key="update*">
					PROPAGATION_SUPPORTS,ISOLATION_SERIALIZABLE
				</prop>
				<prop key="del*">
					PROPAGATION_SUPPORTS,ISOLATION_SERIALIZABLE
				</prop>
				<prop key="add*">
					PROPAGATION_SUPPORTS,ISOLATION_SERIALIZABLE
				</prop>
			</props>
		</property>
	</bean>
	<bean name="addtypeAction" class="controller.AddTypesAction">
		<property name="addtypes" ref="typeservice"/>
		<property name="types" ref="type"></property>
	</bean>
	<bean name="type" class="entity.Types" scope="prototype"/>
</beans>